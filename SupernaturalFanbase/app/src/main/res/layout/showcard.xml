<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:elevation="6dp"
    card_view:cardBackgroundColor="@color/whitesmoke"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/TitleT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="This is a title"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/newsImage"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="#000"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/DescT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sample text. Sample text. Sample text. Sample text. Sample text. Sample text. Sample text. Sample text. Sample text. Sample text. Sample text. "
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textViewLine"
            android:textSize="15sp"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/textViewLine"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:layout_below="@+id/TitleT"
            android:layout_centerHorizontal="true"
            android:background="#bcbcbc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/photoUrl"
            android:layout_below="@+id/newsImage"
            android:layout_alignStart="@+id/textViewLine"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.CardView>